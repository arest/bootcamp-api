{% block vich_file_widget %}
{% spaceless %}
    <div class="vich-file row">        
        <div class="col-sm-8">
            {{ form_widget(form.file,{'attr': {'class': 'form-control'}}) }}
            {% if form.delete is defined %}
            {{ form_widget(form.delete) }}
            {% endif %}
        </div>
        <div class="col-sm-4">
            {% if download_uri is defined and download_uri %}
            <a href="{{ download_uri }}" class="btn btn-primary" target="_blank">{{ 'apri file' | trans }}</a>
            {% endif %}
        </div>
    </div>
{% endspaceless %}
{% endblock %}

{% block vich_image_widget %}
{% spaceless %}
    <div class="vich-image row">
        <div class="col-md-6">
        {{ form_widget(form.file,{'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-6">
            {% if download_uri is defined and download_uri %}
                <a href="{{ download_uri }}" target="_blank">
                    <img width="200" src="{{ download_uri }}" alt="" />
                </a>
            {% endif %}
            {% if form.delete is defined %}
            {{ form_row(form.delete) }}
            {% endif %}
        </div>
    </div>
{% endspaceless %}
{% endblock %}
