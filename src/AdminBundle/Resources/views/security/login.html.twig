{% extends "AdminBundle:security:layout.html.twig" %}

{% block fos_user_content %}

<form action="{{ path("_app_admin_login_check") }}" method="post" class="box login">
		<fieldset class="boxBody">
		{% if csrf_token is defined %}
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	    {% endif %}
	    
		{% if error %}
		    <div class="error">Errore di accesso. Credenziali errate</div>
		{% endif %}

	    <label for="username">{{ 'Username'|trans }}</label>
	    <input type="text" id="username" name="_username" value="{{ last_username }}" />
	    <label for="password">{{ 'Password'|trans}}</label>
	    <input type="password" id="password" name="_password" />

		</fieldset>
		
		<footer>
			<label><input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'remember me'|trans }}</label>
			
	    <input tabindex="4" class="btnLogin"  type="submit" id="_submit" name="_submit" value="{{ 'Submit'|trans }}" />
		</footer>
</form>

<footer id="main">
</footer>

{% endblock fos_user_content %}

